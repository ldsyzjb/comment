{
    "name": "comment instantly",
    "version": "1.0",
    "description": "comment on the web page!",
    "manifest_version": 2,
    "permissions": ["contextMenus", "storage"],
    "background": {
        "scripts": ["js/background.js"]
    },
    "browser_action": {
        "default_icon": "src/browser.png",
        "default_title": "comment",
        "default_popup": "pop.html"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["js/util.js", "js/content.js"],
        "css": ["css/content.css"],
        "run_at": "document_end"
    }],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    }
  }